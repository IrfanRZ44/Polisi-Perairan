<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customdialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:layout_margin="@dimen/margin_standard"
    android:background="@drawable/border_rl_putih"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_img_news"
            android:background="@drawable/border_rl_putih"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/text_img_berita"
                android:textColor="@color/hitam"
                android:text="Topik"
                android:textSize="@dimen/title_font"
                android:layout_marginBottom="@dimen/margin_small"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spinner_blue"
                android:id="@+id/spinner_image"
                android:layout_below="@+id/text_img_berita"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:popupBackground="@drawable/border_rl_blue"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                >
            </Spinner>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_image"
                android:layout_below="@+id/spinner_image"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height40"
                    android:id="@+id/rl_foto"
                    android:background="@drawable/border_btn_blue"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_foto_white"
                        android:id="@+id/img_add_foto"
                        android:layout_toLeftOf="@+id/btn_foto_anggota"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto Topik"
                        android:textColor="@color/putih"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_standard"
                        android:id="@+id/btn_foto_anggota"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/img_foto"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/border_edit_text"
                android:id="@+id/et_nama_foto"
                android:layout_below="@+id/rl_image"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:hint="Topik"
                android:textColorHint="@color/grayMain"
                android:paddingLeft="@dimen/margin_standard"
                android:textColor="@color/hitam"
                android:textSize="14sp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/et_nama_foto"
                android:background="@drawable/border_rl_blue"
                android:gravity="center_horizontal"
                android:id="@+id/rl_tambah_berita"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_putih"
                    android:id="@+id/img_add"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Topik"
                    android:textColor="@color/putih"
                    android:id="@+id/btn_add_foto"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_standard"
                    android:layout_toRightOf="@+id/img_add"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>