<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exomatik.irfanrz.kepolisian.Activity.DetailHotspot">
    <RelativeLayout
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue2">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_backward_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/back"
            android:gravity="center_vertical"
            android:text="Detail Hotspot"
            android:textColor="@color/putih"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/text_title_anggota"
            />

        <ImageView
            android:layout_width="@dimen/width70"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_small"
            android:src="@drawable/logo"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/customToolbar"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/putih"
        android:layout_below="@+id/map"
        android:padding="@dimen/margin_standard"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pr"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:text="Provinsi           : "
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_prov"
            android:layout_toRightOf="@+id/text_pr"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_lc"
            android:layout_below="@+id/text_prov"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:text="Location         : "
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_location"
            android:layout_below="@+id/text_prov"
            android:layout_toRightOf="@+id/text_lc"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_al"
            android:layout_below="@+id/text_location"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:text="Alamat            : "
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_alamat"
            android:layout_below="@+id/text_location"
            android:layout_toRightOf="@+id/text_al"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_kp"
            android:layout_below="@+id/text_alamat"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:text="Nama Kapal   : "
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_kapal"
            android:layout_below="@+id/text_alamat"
            android:layout_toRightOf="@+id/text_kp"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_dp"
            android:layout_below="@+id/text_kapal"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:text="Nama Danpal : "
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_danpal"
            android:layout_below="@+id/text_kapal"
            android:layout_toRightOf="@+id/text_dp"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_tp"
            android:layout_below="@+id/text_danpal"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:text="Telp                   : "
            android:layout_marginTop="@dimen/margin_small"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_telp"
            android:layout_toRightOf="@+id/text_tp"
            android:layout_below="@+id/text_danpal"
            android:textColor="@color/hitam"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/margin_small"
            />

    </RelativeLayout>

</RelativeLayout>
