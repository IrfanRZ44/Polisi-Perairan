<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_logo"
            android:layout_marginTop="100dp"
            />

        <RelativeLayout
            android:id="@+id/rl_non_user"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/img_logo"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:id="@+id/textLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:textAlignment="center"
                android:textColor="@color/grayMain"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textLogin"
                android:layout_marginTop="10dp"
                android:paddingBottom="25dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <EditText
                    android:id="@+id/userNim"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_edit_text"
                    android:hint="Email"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/hitam"
                    android:textColorHint="@color/grayMain" />

                <RelativeLayout
                    android:id="@+id/pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userNim">

                    <EditText
                        android:id="@+id/userPass"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_edit_text"
                        android:hint="Pass"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="50dp"
                        android:singleLine="true"
                        android:textColor="@color/hitam"
                        android:textColorHint="@color/grayMain" />

                    <Button
                        android:id="@+id/show_password"
                        android:layout_width="27dp"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_dont_show"
                        android:theme="@style/MyCheckbox" />
                </RelativeLayout>

                <Button
                    android:id="@+id/userLogin"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/pass"
                    android:layout_margin="5dp"
                    android:background="@color/blue2"
                    android:text="SIGN IN"
                    android:textColor="@color/putih" />

                <Button
                    android:id="@+id/userRegister"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/userLogin"
                    android:layout_margin="5dp"
                    android:background="@drawable/border_btn_register"
                    android:text="SIGN UP"
                    android:textColor="@color/grayGelap" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</ScrollView>